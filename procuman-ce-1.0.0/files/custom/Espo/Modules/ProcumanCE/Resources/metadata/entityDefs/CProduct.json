    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "supplier": {
            "type": "belongsTo",
            "foreign": "products",
            "entity": "CSupplier",
            "audited": false,
            "isCustom": true
        },
        "productImage": {
            "type": "belongsTo",
            "entity": "Attachment",
            "skipOrmDefs": true,
            "utility": true
        },
        "productDocuments": {
            "type": "hasChildren",
            "entity": "Attachment",
            "foreign": "parent",
            "layoutRelationshipsDisabled": true,
            "relationName": "attachments",
            "utility": true
        },
        "purchaseOrderLines": {
            "type": "hasMany",
            "foreign": "product",
            "entity": "CPurchaseOrderLine",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    }
